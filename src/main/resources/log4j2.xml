<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n"/>
        </Console>
        <File name="File" fileName="milou-app.log" immediateFlush="false" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%p] %c - %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="org.hibernate.SQL" level="OFF" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.hibernate.tool.hbm2ddl" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>


        <Logger name="org.jboss.logging" level="ERROR"/>
        <Logger name="com.zaxxer" level="WARN"/>
        <Logger name="org.springframework" level="ERROR"/>

        <Root level="WARN">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
